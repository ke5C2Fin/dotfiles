" Unset Bold Fonts
set t_md=

" Annoying Keys
nnoremap Q <nop>
nnoremap K <nop>
map <C-a> <Nop>
map <C-x> <Nop>

" No Extra Files
set viminfo=
set nobackup
set nowritebackup
set noswapfile

" Word Wrap
set wrap
set linebreak

" Syntax Highlighting
syntax enable
colorscheme newtheme

" Misc settings
"set relativenumber
set number
set ruler
set ttyfast
set showmode
set showcmd

" Tab settings
"set expandtab
"set tabstop=4
"set softtabstop=4
"set shiftwidth=4
"set autoindent
"set cindent
"set smartindent
"set backspace=indent,eol,start

" set ai si et sw=2 sts=2 ts=2
" set autoindent smartindent expandtab shiftwidth=2 softtabstop=2 tabstop=2
" :echo getcompletion('', 'filetype')
au! BufNewFile,BufReadPost *.{eyaml,yaml,yml} set filetype=yaml
au! BufNewFile,BufReadPost *.{pp,epp,erb} set filetype=ruby
au! BufNewFile,BufReadPost *.hcl set filetype=hcl2
au! BufNewFile,BufReadPost *.tf set filetype=tf
au! BufNewFile,BufReadPost *.h set filetype=c
autocmd FileType python setlocal ts=4 sw=4 sts=4 et
autocmd FileType c,make setlocal ts=8 sw=8 sts=8 noet
autocmd FileType yaml,html,tf,hcl2,puppet setlocal sw=2 sts=2 ts=2 et

"set winminheight=0

" Show tab chars and trailing spaces
"set list
"set listchars=tab:>-,trail:-

" Highlight the 80st column if used
"set colorcolumn=80

" Search Settings
"set ignorecase
"set smartcase
"set incsearch
"set hlsearch
